<%- include('partials/header', { titulo: 'Home' }) %>

  <div class="container">

    <% if (session.mensagem) { %>
      <div class="alert alert-success">
        <%= session.mensagem %>
      </div>

      <script>
        setTimeout(() => {
          window.location.href = "/home"; 
        }, 3000);
      </script>

      <% session.mensagem=null; %>
    <% } %>

    <h1>Bem-vindo, <%= session.user?.nome || "Usuário" %>!</h1>

    <div class="card mt-4">
      <div class="links">
        <a href="/users" class="btn btn-primary">Ver usuários</a>
        <a href="/addUser" class="btn btn-success">Cadastrar novo usuário</a>
        <a href="/logout" class="btn btn-secondary">Sair</a>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>