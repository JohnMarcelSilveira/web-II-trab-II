<!DOCTYPE html>
<html>
<head>
  <title>Detalhes do Usu√°rio</title>
</head>
<body>
  <h1>Dados de <%= user.nome %></h1>
  <p><strong>CPF:</strong> <%= user.cpf %></p>
  <p><strong>Perfil:</strong> <%= user.perfil %></p>

  <h3>Emails</h3>
  <ul>
    <% emails.forEach(email => { %>
      <li><%= email.email %> <% if (email.principal) { %>(principal)<% } %></li>
    <% }) %>
  </ul>

  <h3>Telefones</h3>
  <ul>
    <% telefones.forEach(telefone => { %>
      <li><%= telefone.numero %> <% if (telefone.principal) { %>(principal)<% } %></li>
    <% }) %>
  </ul>

  <a href="/users">Voltar</a>
</body>
</html>
