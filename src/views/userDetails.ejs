<%- include('partials/header', { titulo: 'Detalhes do usuario' }) %>

  <div class="container">
    <h1>Detalhes de <%= user.nome %>
    </h1>

    <div class="form-group">
      <label><strong>CPF:</strong></label>
      <span>
        <%= user.cpf %>
      </span>
    </div>

    <div class="form-group">
      <label><strong>Perfil:</strong></label>
      <span>
        <%= user.perfil %>
      </span>
    </div>

    <h3>Emails</h3>
    <ul>
      <% emails.forEach(email=> { %>
        <li>
          <%= email.email %>
            <% if (email.principal) { %><strong> (principal)</strong>
              <% } %>
        </li>
        <% }) %>
    </ul>

    <h3>Telefones</h3>
    <ul>
      <% telefones.forEach(tel=> { %>
        <li>
          <%= tel.telefone %>
            <% if (tel.principal) { %><strong> (principal)</strong>
              <% } %>
        </li>
        <% }) %>
    </ul>

    <div style="margin-top: 20px;">
      <a href="/users" class="button">Voltar</a>
      <a href="/updateUser/<%= user.id %>" class="button">Editar Usu√°rio</a>
    </div>
  </div>

  <%- include('partials/footer') %>