    <button type="submit">Filtrar</button>
  </form>

  <ul>
    <% users.forEach(user => { %>
      <li>
        <a href="/user/<%= user.id %>"><%= user.nome %></a>
        <% if (session.user.perfil === 'ADMIN' || session.user.id === user.id) { %>
          | <a href="/updateUser/<%= user.id %>">Editar</a>
        <% } %>
        <% if (session.user.perfil === 'ADMIN' && user.perfil !== 'ADMIN') { %>
          | <a href="/deleteUser/<%= user.id %>">Excluir</a>
        <% } %>
      </li>
    <% }) %>
  </ul>

  <div>
    <% if (pagina > 1) { %>
      <a href="/users?pagina=<%= pagina - 1 %>&nome=<%= filtro || '' %>">Anterior</a>
    <% } %>
    P치gina <%= pagina %>
    <% if (temMais) { %>
      <a href="/users?pagina=<%= pagina + 1 %>&nome=<%= filtro || '' %>">Pr칩xima</a>
    <% } %>
  </div>

  <a href="/home">Voltar</a>
</body>
</html>
