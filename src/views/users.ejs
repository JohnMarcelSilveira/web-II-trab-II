    <form method="GET" action="/users">
      <input type="text" name="nome" placeholder="Filtrar por nome" value="<%= filtro || '' %>" />
      <button type="submit">Filtrar</button>
    </form>

    <ul>
      <% users.forEach(user=> { %>
        <li>
          <a href="/viewUser/<%= user.id %>">
            <%= user.nome %>
          </a>
          <% if (session && session.user && (session.user.perfil==='ADMIN' || session.user.id===user.id)) { %>
            | <a href="/updateUser/<%= user.id %>">Editar</a>
            <% } %>
              <% if (session && session.user && session.user.perfil==='ADMIN' && user.perfil !=='ADMIN' ) { %>
                | <a href="/deleteUser/<%= user.id %>">Excluir</a>
                <% } %>
        </li>
        <% }) %>
    </ul>

    <div class="paginacao">
      <% if (pagina> 1) { %>
        <a href="/users?pagina=<%= pagina - 1 %>&nome=<%= filtro || '' %>">Anterior</a>
        <% } %>
          P치gina <%= pagina %>
            <% if (temMais) { %>
              <a href="/users?pagina=<%= pagina + 1 %>&nome=<%= filtro || '' %>">Pr칩xima</a>
              <% } %>
    </div>

    <a href="/home">Voltar</a>
  </div>

  <%- include('partials/footer') %>