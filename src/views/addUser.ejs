<%- include('partials/header', { titulo: 'Cadastrar Usuário' }) %>

  <div class="container">
    <div class="card">
      <h1 class="mb-4">Cadastrar Usuário</h1>

      <form method="POST" action="/addUser">
        <div class="form-group">
          <label for="nome" class="form-label">Nome:</label>
          <input type="text" class="form-control" name="nome" required>
        </div>

        <div class="form-group">
          <label for="cpf" class="form-label">CPF:</label>
          <input type="text" class="form-control" name="cpf" required>
        </div>

        <div class="form-group">
          <label for="senha" class="form-label">Senha:</label>
          <input type="password" class="form-control" name="senha" required>
        </div>

        <div class="form-group">
          <label for="perfil" class="form-label">Perfil:</label>
          <select class="form-control" name="perfil" required>
            <option value="">Selecione...</option>
            <option value="ADMIN">ADMIN</option>
            <option value="CLIENTE">CLIENTE</option>
          </select>
        </div>

        <h3 class="mt-4">E-mails</h3>
        <div id="emails">
          <div class="input-group">
            <input type="email" class="form-control" name="emails[0][email]" placeholder="exemplo@email.com" required>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="emails[0][principal]" value="1" id="principalEmail0">
              <label class="form-check-label" for="principalEmail0">Principal</label>
            </div>
          </div>
        </div>
        <button type="button" class="btn btn-outline-primary mt-2" onclick="addEmail()">
          + Adicionar E-mail
        </button>

        <h3 class="mt-4">Telefones</h3>
        <div id="telefones">
          <div class="input-group">
            <input type="tel" class="form-control" name="telefones[0][telefone]" placeholder="(00) 00000-0000" required>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="telefones[0][principal]" value="1" id="principalTel0">
              <label class="form-check-label" for="principalTel0">Principal</label>
            </div>
          </div>
        </div>
        <button type="button" class="btn btn-outline-primary mt-2" onclick="addTelefone()">
          + Adicionar Telefone
        </button>

        <div class="form-group mt-4">
          <button type="submit" class="btn btn-primary mr-2">Cadastrar</button>
          <a href="/home" class="btn btn-secondary">Cancelar</a>
        </div>
      </form>
    </div>
  </div>
  <script src="/js/form-addUser.js"></script>

  <%- include('partials/footer') %>